extends baseEmail

block content
  p Hi #{firstName},
  p This is your password reset token valid for 10 minutes
  p Submit a PATCH request with your new password to this link #{url}
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Password Reset Token
  p If you didn't forget your password, please ignore this email!
  p - Natours Team